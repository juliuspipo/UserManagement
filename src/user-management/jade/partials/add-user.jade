div.add-user( ng-controller="addUserCtrl" )
    div.container-data-user
        h2.subtitle Alta de usuario
        div.content-user-form
            div(upload-image="model.imageProfile", label="SELECCIONAR FOTO")
            div.content-form-field
                div.row-field
                    div.form-field
                        div.label-field Nombre
                        input.text-field(type="text")
                    div.form-field
                        div.label-field Apellido 1
                        input.text-field(type="text")
                    div.form-field
                        div.label-field Apellido 2
                        input.text-field(type="text")
                div.row-field.row-tel-email
                    div.form-field
                        div.label-field Usuario/Correo contractor
                        input.text-field(type="text")
                    div.form-field
                        div.label-field Teléfono
                        input.text-field(type="tel")
                div.applications-permissions
                    div.section-title Permisos del usuario
                    div.applications
                        div.text Aplicaciones disponibles
                        div.container-apps
                            div(application="app", on-click=" addApplication ", ng-repeat="app in model.applications")
                    div.permissions
                        div.text Roles añadidos
                        div.container-permissions
                            div(permission="permission", on-click=" removeApplication " ng-repeat="permission in model.aggregatesRoles")
